var areaChart = dex.charts.c3.AreaChart({
  parent : "#ChartArea",
  "options.subchart.show": true,
  "options.point.show": false,
  csv : csv
});

areaChart.load();
areaChart.render();

function setValue(chartName, key, value)
{
  switch (chartName) {
    case "areaChart":
    {
      areaChart.attr(key, value).render();
      areaChart.save();
      break;
    }
  }
}

function getGuiDefinition()
{
  var guiDef = {
    'areaChart': areaChart.getGuiDefinition()
  };

  return JSON.stringify(guiDef);
}
