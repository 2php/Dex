<script>
<%
  println dexData.toCsvString();
%>

function setConfiguration(config)
{
  radar.configure(config);
}

// Take first categorical column and all numerics.  c1,n1,n2,...
// Expand by column...

var radar = new dex.charts.d3.RadarChart({
  parent : "#ChartArea",
  //resizable : true,
  //color : dex.color.getColormap("crayola8"),
  csv : csv
});

radar.load('#config');
radar.render();

function setValue(key, value)
{
  radar.attr(key, value).update();
}

function getGuiDefinition()
{
  return JSON.stringify(radar.getGuiDefinition());
}

